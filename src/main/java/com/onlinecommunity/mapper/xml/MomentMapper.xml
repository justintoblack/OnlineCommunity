<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onlinecommunity.mapper.MomentMapper">

    <select id="findAllMomentByUid" parameterType="Integer" resultType="com.onlinecommunity.pojo.Moment">
        select *
        from online_community.moment
        where uid = #{uid}
    </select>

    <select id="findOneMomentByMid" parameterType="Integer" resultType="com.onlinecommunity.pojo.Moment">
        select *
        from online_community.moment
        where mid = #{mid}
    </select>

    <insert id="saveMoment" parameterType="com.onlinecommunity.pojo.Moment" keyProperty="mid">
        insert into online_community.moment(mid, uid, mcontent, mpicurl, mtime, mlikecount, mcommentcount, mrepostcount)
        values (#{mid}, #{uid}, #{mcontent}, #{mpicurl}, #{mtime}, #{mlikecount}, #{mcommentcount}, #{mrepostcount})
    </insert>

    <delete id="deleteMomentByMid" parameterType="Integer">
        delete
        from online_community.moment
        where mid = #{mid}
    </delete>

    <select id="getMomentCountByUid" parameterType="Integer" resultType="Integer">
        select count(mid)
        from online_community.moment
        where uid = #{uid}
    </select>

</mapper>
